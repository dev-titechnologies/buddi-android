<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="buddyapp.com.activity.questions.Question3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
               <TextView
                android:layout_width="match_parent"
                android:text="@string/text_how_long_training"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/training_exp"

                android:maxLines="4"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/have_cometed_category"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="30dp">
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/yes_competed_category"
                    android:text="@string/yes"
                    android:background="@drawable/pressed"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="5dp"
                    android:layout_height="10dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:text="@string/no"
                    android:background="@drawable/pressed"
                    android:id="@+id/no_competed_category"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/have_coached_category"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="30dp">
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/yes_coached_anybody"
                    android:text="@string/yes"
                    android:background="@drawable/pressed"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="5dp"
                    android:layout_height="10dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:text="@string/no"
                    android:background="@drawable/pressed"
                    android:id="@+id/no_coached_anybody"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/certified_personal"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="30dp">
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/yes_certified_trainer"
                    android:text="@string/yes"
                    android:background="@drawable/pressed"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="5dp"
                    android:layout_height="10dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:text="@string/no"
                    android:background="@drawable/pressed"
                    android:id="@+id/no_certified_trainer"
                    android:layout_height="wrap_content" />

            </LinearLayout>

    </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:id="@+id/next"
                android:background="@color/button_bgcolor"/>
    </LinearLayout>

    </ScrollView>

</RelativeLayout>
