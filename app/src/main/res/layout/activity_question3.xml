<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f9f9f9"
    tools:context="buddyapp.com.activity.questions.Question3">
<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:id="@+id/toolbar"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
          android:layout_centerVertical="true"
            android:id="@+id/back"
            android:layout_gravity="start"
            android:src="@drawable/ic_arrow_back_black_24dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="@dimen/small"
            android:layout_toRightOf="@id/back"
            android:textSize="21sp"
            android:text="@string/text_training_history"/>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">
               <TextView
                android:layout_width="match_parent"
                android:text="@string/text_how_long_training"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/training_exp"

                android:maxLines="4"
                android:layout_height="wrap_content" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/large"
                android:gravity="center"
                android:text="@string/have_cometed_category"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/yes_competed_category"
                    android:text="@string/yes"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="wrap_content"
                    android:text="@string/no"
                    android:id="@+id/no_competed_category"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/large"
                android:gravity="center"
                android:text="@string/have_coached_category"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/yes_coached_anybody"
                    android:text="@string/yes"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:layout_height="wrap_content"  />

                <Button
                    android:layout_width="wrap_content"
                    android:text="@string/no"
                    android:id="@+id/no_coached_anybody"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:layout_height="wrap_content"  />

            </LinearLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/large"
                android:gravity="center"
                android:text="@string/certified_personal"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/yes_certified_trainer"
                    android:text="@string/yes"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="wrap_content"
                    android:text="@string/no"
                    android:id="@+id/no_certified_trainer"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:layout_height="wrap_content"  />

            </LinearLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    </LinearLayout>

    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:id="@+id/next"
        android:textAllCaps="true"
        android:layout_alignParentBottom="true"
        android:background="@color/button_bgcolor"/>
</RelativeLayout>
