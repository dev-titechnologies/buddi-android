<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    tools:context="buddiapp.com.activity.Fragment.Wallet">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:gravity="center|center_vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="50dp"
                        android:textSize="50dp"
                        android:text="$"
                        android:drawablePadding="@dimen/large"
                        android:textColor="@color/white"
                        android:drawableLeft="@drawable/ic_wallet" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:id="@+id/wallet_amount"
                        android:textSize="50dp"
                        android:drawablePadding="@dimen/large"
                        android:paddingTop="50dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="50dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large"
                    android:paddingBottom="50dp"
                    android:text="Wallet Balance"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wallet_trainee"
                android:visibility="visible"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_wallet_black"
                    android:drawablePadding="@dimen/large"
                    android:padding="@dimen/large"
                    android:textSize="16dp"
                    android:text="Top Up Wallet"/>
                <buddiapp.com.utils.androidslidr.Slidr
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/large"
                    android:layout_marginLeft="@dimen/large"
                    android:layout_gravity="center"
                    android:id="@+id/slideure"
                    app:slidr_region_leftColor="@color/colorPrimary"
                    app:slidr_regions_centerText="false" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_amount_layout"
                    android:gravity="center"
                    android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/large"
                    android:layout_marginRight="@dimen/large"
                    android:layout_marginTop="@dimen/large"
                    app:cardElevation="@dimen/small"
                    android:layout_marginBottom="@dimen/large">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_vertical"
                        android:text="Proceed"
                        android:gravity="center_horizontal"
                        android:id="@+id/proceed"
                        android:textSize="@dimen/large"
                        android:textStyle="bold"
                        android:background="@color/ash"
                        android:paddingBottom="@dimen/medium"
                        android:paddingTop="@dimen/medium"
                        android:paddingRight="30dp"
                        android:paddingLeft="30dp"
                        android:textColor="@color/white"/>
                </android.support.v7.widget.CardView>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wallet_trainer"
                android:padding="@dimen/large"
                android:visibility="gone"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/small"
                    android:text="Swipe to withdraw your wallet balance"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="120dp">

            <buddiapp.com.utils.slidetounlock.SlideLayout
                android:layout_width="50dp"
                android:layout_height="120dp"
                android:id="@+id/slider1">
                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/slide_child_3"
                    android:padding="@dimen/small"
                    android:background="@drawable/circle_blue_filled">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_wallet"/>
                </FrameLayout>

            </buddiapp.com.utils.slidetounlock.SlideLayout>
    <FrameLayout
        android:layout_width="35dp"
        android:layout_height="120dp"
        android:layout_marginLeft="7dp"
        android:paddingLeft="@dimen/small"
        android:layout_marginTop="50dp"
        android:layout_gravity="top"
        >

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/arrow"
            android:background="@drawable/ic_arrow_down"
            />

    </FrameLayout>
</FrameLayout>
                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="@dimen/small"
                    android:background="@drawable/circle_blue_filled">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium"
                    android:layout_gravity="center_horizontal"
                    android:layout_below="@+id/slider1"
                    android:src="@drawable/ic_bank_building" />
                </FrameLayout>

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/ash"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_all_transaction"
                android:drawablePadding="@dimen/large"
                android:padding="@dimen/large"
                android:textSize="16dp"
                android:id="@+id/all_transaction"
                android:drawableRight="@drawable/ic_right_arrow"
                android:text="All Transaction"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ash"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

