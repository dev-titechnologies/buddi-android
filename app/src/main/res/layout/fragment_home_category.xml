<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="buddyapp.com.activity.Fragment.HomeCategory">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root"
        tools:context="buddyapp.com.activity.ChooseCategory">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/large"
        android:id="@+id/text"
        android:text="Choose a Category"/>

    <ImageView
        android:layout_width="75dp"
        android:src="@drawable/ic_error"
        android:id="@+id/errorImage"
        android:visibility="gone"
        android:layout_below="@+id/text"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_height="75dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/text"
            android:layout_height="match_parent">
    <GridView
        android:layout_width="match_parent"
        android:padding="@dimen/small"
        android:numColumns="2"
        android:id="@+id/grid"
        android:layout_weight="1"
        android:fillViewport="true"
        android:gravity="center"
        android:layout_height="wrap_content">

    </GridView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"


            android:id="@+id/card_instant"
   >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/instant_booking"
                android:padding="@dimen/medium"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="60dp"
                    android:src="@drawable/instant_booking"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="INSTANT BOOKING"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:visibility="gone"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:id="@+id/next"
                android:textAllCaps="true"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>



</FrameLayout>
