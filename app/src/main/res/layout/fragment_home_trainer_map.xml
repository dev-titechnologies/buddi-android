<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="buddyapp.com.activity.Fragment.HomeTrainerMap">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#b693e2ff"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="5dp"
        android:textStyle="bold"
        android:text="Availability status"/>
    <ToggleButton
        android:id="@+id/togglebutton"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:background="@drawable/toggle_selector"/>
    </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:layout_weight="1"
                    android:id="@+id/start"
                  android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/startactionIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/startactionTitle"
                        android:layout_width="wrap_content"
                        android:text="Start"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="100dp"
                    android:background="@color/grey"
                    android:layout_height="5dp"></FrameLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/stop"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/stopactionIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/stopactionTitle"
                        android:layout_width="wrap_content"
                        android:text="Stop"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="100dp"
                    android:background="@color/grey"
                    android:layout_height="5dp"></FrameLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/profile"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/profileactionIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/profileactionTitle"
                        android:layout_width="wrap_content"
                        android:text="Profile"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="100dp"
                    android:background="@color/grey"
                    android:layout_height="5dp"></FrameLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/message"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/messageactionIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/messagectionTitle"
                        android:layout_width="wrap_content"
                        android:text="Message"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</FrameLayout>
